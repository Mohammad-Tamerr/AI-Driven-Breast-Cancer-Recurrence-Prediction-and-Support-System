# Copy to .env and fill values
APP_NAME=Rafeek
APP_VERSION=0.1.0

# File upload settings
FILE_ALLOWED_TYPES=["txt","pdf"]
MAX_FILE_SIZE_MB=10
CHUNK_SIZE=1024

# LLM / Embeddings
GENERATION_BACKEND=GEMINI
GENERATION_MODEL_ID=models/text-bison-001
EMBEDDING_BACKEND=GEMINI
EMBEDDING_MODEL_ID=models/textembedding-gecko-001
EMBEDDING_MODEL_SIZE=1536

# Gemini API key
GEMINI_API_KEY=your_gemini_api_key_here

# Vector DB
VECTOR_DB_BACKEND=QDRANT  # or INMEMORY
VECTOR_DB_PATH=patients_qdrant
VECTOR_DB_DISTANCE_METHOD=cosine

# Optional OpenAI/Cohere keys
OPENAI_API_KEY=
COHERE_API_KEY=
